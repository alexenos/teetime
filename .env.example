# Twilio Configuration
TWILIO_ACCOUNT_SID=your_account_sid
TWILIO_AUTH_TOKEN=your_auth_token
TWILIO_PHONE_NUMBER=+1234567890
# Channel: "sms" or "whatsapp" (use "whatsapp" for WhatsApp sandbox)
TWILIO_CHANNEL=whatsapp

# Google Gemini API
GEMINI_API_KEY=your_gemini_api_key

# Walden Golf Club Credentials
WALDEN_MEMBER_NUMBER=your_member_number
WALDEN_PASSWORD=your_password
WALDEN_BASE_URL=https://www.waldengolf.com

# User Configuration
USER_PHONE_NUMBER=+1234567890

# Database (for local development, use SQLite)
DATABASE_URL=sqlite+aiosqlite:///./teetime.db

# Booking Configuration
TIMEZONE=America/Chicago
BOOKING_OPEN_HOUR=6
BOOKING_OPEN_MINUTE=30
DAYS_IN_ADVANCE=7
MAX_TEE_TIMES_PER_DAY=2

# Cloud Scheduler Configuration
# API key for authenticating scheduled job requests
# Generate a secure random key: openssl rand -hex 32
SCHEDULER_API_KEY=your_scheduler_api_key
